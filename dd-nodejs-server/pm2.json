{
  "apps": [
    {
      "name": "DDNodeJsServer",
      "script": "./app.js",
      "cwd": "./",
      "watch": true, 
      "ignore_watch": [
        "node_modules",
        "logs",
        "file",
        "dist",
        "readme.txt"
      ],
      "instances": 1,
      "error_file": "./logs/pm2Err.log",
      "out_file": "./logs/pm2Out.log",
      "log_date_format": "YYYY-MM-DD HH:mm:ss",
      "env": {
        "NODE_ENV": "development"
      }
    }
  ]
}
